# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_APP_NAME="Dividend Calculator Hub"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ADS_ID=AW-XXXXXXXXXX

# API Keys
FINANCIAL_MODELING_PREP_API_KEY=your-fmp-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# Email Service (e.g., SendGrid, Resend)
EMAIL_API_KEY=your-email-service-key
EMAIL_FROM=noreply@yourdomain.com

# Ad Networks (if using)
NEXT_PUBLIC_GOOGLE_ADSENSE_ID=ca-pub-XXXXXXXXXXXXXXXX

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_ADS=false
NEXT_PUBLIC_ENABLE_EMAIL_CAPTURE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security
SESSION_SECRET=your-secret-session-key-min-32-chars

# Admin API Authentication (generate with: openssl rand -hex 32)
ADMIN_API_KEY=your-secure-admin-api-key-min-32-chars

# Optional: IP Allowlist for Admin Endpoints (comma-separated)
# ADMIN_ALLOWED_IPS=127.0.0.1,192.168.1.100
