# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Dividend Calculator Hub"
NEXT_PUBLIC_APP_DESCRIPTION="Free dividend calculators and investment tools"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Financial Modeling Prep API
FMP_API_KEY=your_fmp_api_key
NEXT_PUBLIC_FMP_BASE_URL=https://financialmodelingprep.com/api/v3

# Analytics and Monitoring
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id_here
NEXT_PUBLIC_GOOGLE_ADSENSE_CLIENT=your_adsense_client_id_here

# Email Service (for lead generation)
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
EMAIL_FROM_ADDRESS=noreply@dividendcalculatorhub.com

# Testing Environment Variables
TEST_MODE=true
MOCK_API_RESPONSES=true
DISABLE_ANALYTICS=true

# Database URLs for testing
TEST_DATABASE_URL=your_test_database_url_here

# Logging Configuration
LOG_LEVEL=debug
LOG_TO_FILE=false

# Feature Flags
ENABLE_PREMIUM_FEATURES=false
ENABLE_AFFILIATE_TRACKING=false
ENABLE_A_B_TESTING=false

# External Service URLs
NEXT_PUBLIC_BROKER_AFFILIATE_BASE_URL=https://affiliate.example.com

# Security Settings
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000