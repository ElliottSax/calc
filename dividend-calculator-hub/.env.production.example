# Production Environment Variables for Vercel
# Copy these to your Vercel project settings

# Application Settings
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
NEXT_PUBLIC_APP_NAME="Dividend Calculator Hub"
NEXT_PUBLIC_APP_DESCRIPTION="Free dividend calculators and investment tools"

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://[your-project-id].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.[your-anon-key]
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.[your-service-role-key]

# Financial Modeling Prep API (REQUIRED)
FMP_API_KEY=your_fmp_api_key_here
NEXT_PUBLIC_FMP_BASE_URL=https://financialmodelingprep.com/api/v3

# Analytics and Monitoring (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ADSENSE_CLIENT=ca-pub-XXXXXXXXXXXXXXXX

# Email Service (Optional)
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
EMAIL_FROM_ADDRESS=noreply@dividendcalculatorhub.com

# Feature Flags
ENABLE_PREMIUM_FEATURES=false
ENABLE_AFFILIATE_TRACKING=true
ENABLE_A_B_TESTING=false

# Security Settings
NEXTAUTH_SECRET=generate_random_secret_min_32_chars_long_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXTAUTH_URL=https://your-app.vercel.app

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Logging
LOG_LEVEL=info

# Disable in Production
TEST_MODE=false
MOCK_API_RESPONSES=false
DISABLE_ANALYTICS=false
